%pre Some weather snapper here.
.zipcodeform
  %form{:method => "post"}
    %input#submit{:name => "zipcode", :type => "input", :value => "94530"}/
    %input#submit{:type => "submit"}/

%table
  %tr.snapper
    %th
    %th Date
    %th POP
  %tbody
    - unless @forecastday.nil?
      - @forecastday.each do |period|
        %tr
          %td.icon
            <img src="#{period['icon_url']}" height="64" />
          %td.date
            - @dd.set_epoch((period['date']['epoch']).to_i)
            = "#{@dd.get_day('day')},"
            = @dd.get_date('date')
            = "#{@dd.get_month('month')}."
            = @dd.get_year('year')
          %td.pop
            = "#{period['pop']}"
